<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals               = "false"
        backupStaticAttributes      = "false"
        colors                      = "true"
        verbose                     = "true"
        convertErrorsToExceptions   = "true"
        convertNoticesToExceptions  = "true"
        convertWarningsToExceptions = "true"
        processIsolation            = "false"
        stopOnFailure               = "false"
        testdox                     = "true"
        bootstrap                   = "vendor/autoload.php">
    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php" phpVersion="8.1.0" phpVersionOperator=">=">tests/</directory>
        </testsuite>
    </testsuites>
</phpunit>
